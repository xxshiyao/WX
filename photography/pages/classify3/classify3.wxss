page {
    background-color: white;
}
.aritcle-list {
    display: flex;
    justify-content:center;
    flex-direction: column;
    align-items: center;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.aritcle-col {
    display: flex;
    width: 95%;
}

.article-item {
  display: flex;
  justify-content:center;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
  float: center;
  width: 340rpx;
  box-shadow: 0px 2px 5px #e2e1e1;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.article-item .article-cover {
    width: 310rpx;
    height: 180rpx;
}

.article-item .title {
    font-size: 25rpx;
    font-weight: normal;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    letter-spacing: 0.05rem;
    display: block;
    padding: 15rpx 0rpx 15rpx 0rpx;
    text-align: center;
    width: 310rpx;
}