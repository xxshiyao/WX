page {
    background: #f2f2f2;
}

.article-item {
  display: flex;
  justify-content:center;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
  float: center;
  width: 310rpx;
  box-shadow: 0px 2px 5px #888888;
  margin-bottom: 40rpx;
  margin-left: 15rpx;
}

.article-item .article-cover {
    width: 310rpx;
    height: 180rpx;
}

.article-item .title {
    font-size: 25rpx;
    font-weight: normal;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    letter-spacing: 0.05rem;
    display: block;
    padding: 15rpx 0rpx 15rpx 0rpx;
}